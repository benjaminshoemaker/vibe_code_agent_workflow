{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node10",
    "noEmit": false,
    "outDir": "dist",
    "rootDir": "src",
    "allowJs": false,
    "resolveJsonModule": true,
    "types": ["node"],
    "lib": ["ES2022"],
    "target": "ES2022",
    "declaration": false,
    "incremental": false
  },
  "include": ["src/**/*.ts", "types/**/*.d.ts"],
  "exclude": ["app", ".next", "node_modules", "tests", "dist"]
}
